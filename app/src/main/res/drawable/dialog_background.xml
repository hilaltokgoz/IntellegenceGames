<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Tamamen şeffaf bir arka plan katmanı -->
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#e75748"/>
            <solid android:color="#00000000"/> <!-- Şeffaf renk -->
            <corners android:radius="24dp"/>
        </shape>
    </item>
    <!-- Beyaz renkte ve kırmızı çerçeveli bir iç katman -->
    <item android:left="5dp" android:right="5dp" android:top="5dp" android:bottom="5dp">
        <shape android:shape="rectangle">
            <solid android:color="#00FFFFFF"/> <!-- Tamamen şeffaf beyaz -->
            <corners android:radius="20dp"/>
            <stroke android:width="5dp" android:color="#e75748"/>
            <padding android:left="10dp" android:top="10dp" android:right="10dp" android:bottom="10dp"/>
        </shape>
    </item>
</layer-list>
